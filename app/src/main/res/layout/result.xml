<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
                android:id="@+id/textViewResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewResultSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMuted"/>

            <TextView
                    android:id="@+id/textViewResultSeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/colorSuccess"/>

            <TextView
                    android:id="@+id/textViewResultLeaches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/colorDanger"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:id="@+id/imageButtonResultMagnet"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/magnet"
            android:contentDescription="@string/magnet_button_description"/>

</LinearLayout>
